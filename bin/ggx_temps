#!/usr/bin/env ruby
require "optparse"
require_relative "../lib/ggx_monitor/temps"

begin

  banner = "\n\nThis utility checks GeoGraphix projects for temp tables "\
    "usually leftover\nfrom client crashes that should be deleted. WARNING: "\
    "These tables are NORMAL\nif users are actively working in the projects; "\
    "only delete them if you are\nabsolutely certain that the project(s) are "\
    "not in use.\n\nUsage: ggx_temps [options]\n\n"

  options = {kill_temps: false}
  OptionParser.new do |opts|
    opts.banner = banner

    opts.on("-k", "--kill_temps", "Drop leftover temp tables") do |k|
      options[:kill_temps] = k
    end

    opts.on_tail("-h", "--help", "Show this message") do
      puts opts
      exit
    end

  end.parse!

  # define options either locally or from specified file
  opts_path = options[:opts_path] ? options[:opts_path] : "./options.yml"
  if File.exists?(opts_path)
    Temps.set_opts = opts_path
  else
    raise ArgumentError.new("invalid options file path: #{opts_path}") 
  end

  Temps.process_projects(options[:kill_temps])

rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end

